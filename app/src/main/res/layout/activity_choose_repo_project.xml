<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewChooseRepo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/select_repository"
        android:textSize="32sp"
        android:textColor="@android:color/black"/>

    <Spinner
        android:id="@+id/repoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:backgroundTint="@color/Accent"
        android:popupBackground="@color/Accent"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/textViewChooseProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/select_project"
        android:textSize="32sp"
        android:textColor="@android:color/black"/>

    <Spinner
        android:id="@+id/projectSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:backgroundTint="@color/Accent"
        android:popupBackground="@color/Accent"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/textViewChooseColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/chooseColumn"
        android:textSize="32sp"
        android:textColor="@android:color/black"/>

    <Spinner
        android:id="@+id/columnSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:backgroundTint="@color/Accent"
        android:popupBackground="@color/Accent"
        android:spinnerMode="dropdown" />
    <Button
        android:id="@+id/chooseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Accent"
        android:elevation="12dp"
        android:text="@string/choose_button_string" />

</LinearLayout>